{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug gridLock",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main",
            "miDebuggerPath": "/run/current-system/sw/bin/gdb",
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build with Makefile",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}